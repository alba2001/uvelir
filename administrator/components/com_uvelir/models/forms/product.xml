<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_uvelir/models/rules"
>
    <fieldset name="product">

        <field name="id" type="text" default="0" 
                label="COM_UVELIR_PRODUCT_ID"
                readonly="true" class="readonly"
                description="COM_UVELIR_PRODUCT_ID_DESC" /> 
        <field name="name" type="text"
                label="COM_UVELIR_PRODUCT_NAME"
                description="COM_UVELIR_PRODUCT_NAME_DESC" 
                required="true" 
                filter="raw"
                size="80"
                maxlength="255" /> 
        <field name="artikul" type="text" default="" 
                label="COM_UVELIR_ARTIKUL"
                required="true" 
                description="COM_UVELIR_PRODUCT_ARTIKUL_DESC" /> 
        <field name="material" type="text" default="" 
                label="COM_UVELIR_PRODUCT_MATERIAL"
                required="true" 
                description="COM_UVELIR_PRODUCT_MATERIAL_DESC" 
                size="50"
        /> 
        <field name="proba" type="text" default="" 
                label="COM_UVELIR_PRODUCT_PROBA"
                
                description="COM_UVELIR_PRODUCT_PROBA_DESC" /> 
        <field name="average_weight" type="text" default="" 
                label="COM_UVELIR_PRODUCT_WEIGHT"
                required="true" 
                description="COM_UVELIR_PRODUCT_WEIGHT_DESC" /> 
        <field name="vstavki" type="text" default="" 
                label="COM_UVELIR_PRODUCT_VSTAVKI"
                
                description="COM_UVELIR_PRODUCT_VSTAVKI_DESC" /> 
        <field name="opisanije" type="textarea" default="" 
                label="COM_UVELIR_PRODUCT_OPISANIJE"
                description="COM_UVELIR_PRODUCT_OPISANIJE_DESC" /> 
        <field name="razmer" type="text" default="" 
                label="COM_UVELIR_PRODUCT_RAZMER" size="50"
                description="COM_UVELIR_PRODUCT_RAZMER_DESC" /> 
        <field name="cena_mag" type="text" default="" 
                label="COM_UVELIR_PRODUCT_CENA_MAG"
                description="COM_UVELIR_PRODUCT_CENA_MAG_DESC" /> 
        <field name="cena_tut" type="text" default="" 
                label="COM_UVELIR_PRODUCT_CENA_TUT"
                description="COM_UVELIR_PRODUCT_CENA_TUT_DESC" /> 
        <field name="novinka_dt" type="calendar" default="" 
                label="COM_UVELIR_PRODUCT_NOVINKA_DT" description="" format="%d.%m.%Y" />              
        <field name="created_by" type="createdby" default="" 
              label="COM_UVELIR_PRODUCT_CREATED_BY"
              readonly="true" class="readonly"
              size="80"
              description="COM_UVELIR_PRODUCT_CREATED_BY_DESC"  /> 
        <field name="created_dt" type="text" default="" 
              label="COM_UVELIR_PRODUCT_CREATED_DT"
              readonly="true" class="readonly"
              size="80"
              description=""  /> 
        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            size="1"
            default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field> 
        <field name="spets_predl" type="checkbox" 
            label="COM_UVELIR_PRODUCT_SPETS_PREDL" 
            description="" value="1" default="0" 
        />
        <field name="available" type="checkbox" 
            label="COM_UVELIR_PRODUCTS_AVIALABLE" 
            description="" value="1" default="0" 
        />

        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" /> 

        <field name="product_image" type="media" directory="stories" 
            label="COM_UVELIR_PRODUCTS_IMAGE" description="COM_UVELIR_PRODUCTS_IMAGE_DESC" />
    </fieldset> 

</form>
