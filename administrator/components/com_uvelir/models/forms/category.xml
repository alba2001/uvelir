<?xml version="1.0" encoding="utf-8"?>
<form>
	<field
		name="id"
		type="text"
		default="0"
		label="JGLOBAL_FIELD_ID_LABEL"
		class="readonly"
		readonly="true"
        />

	<field
		name="parent_id"
		type="text"
		label="COM_CATEGORIES_FIELD_PARENT_LABEL"
		class="readonly"
		readonly="true"
        />

        <field 
                name="producttype_id" 
                type="sql" 
                default="0" 
                label="COM_UVELIR_PRODUCTTYPE" 
                query="SELECT id, name FROM #__uvelir_producttypes" 
                key_field="id" 
                value_field="name" >        
                <option value="0">COM_UVELIR_SELECT_PRODUCTTYPE</option>
	</field>
	<field
		name="path"
		type="text"
		label="CATEGORIES_PATH_LABEL"
		description="CATEGORIES_PATH_DESC"
		class="readonly"
		size="40"
		readonly="true"/>

	<field
		name="name"
		type="text"
		label="JGLOBAL_TITLE"
		description="JFIELD_TITLE_DESC"
		class="inputbox"
		size="40"
		required="true"/>

	<field
		name="alias"
		type="text"
		label="JFIELD_ALIAS_LABEL"
		description="JFIELD_ALIAS_DESC"
		class="readonly"
		readonly="true"
                />

	<field
		name="source_url"
		type="text"
		label="COM_UVELIR_SOURCE_URL"
		description="JFIELD_SOURCE_URL_DESC"
		class="readonly"
		readonly="true"
                />
	<field
		name="img"
		type="media"
                directory="stories"
		label="COM_UVELIR_IMAG"
                />
	<field
		name="note"
		type="text"
		label="JFIELD_NOTE_LABEL"
		description="JFIELD_NOTE_DESC"
		class="inputbox"
		size="40"/>

	<field
		name="description"
		type="editor"
		label="JGLOBAL_DESCRIPTION"
		description="COM_CATEGORIES_DESCRIPTION_DESC"
		class="inputbox"
		filter="JComponentHelper::filterText"
		buttons="true"
		hide="readmore,pagebreak"/>


</form>
